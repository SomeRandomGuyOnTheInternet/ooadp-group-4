{{> _msg }}
<div id="colorlib-container">
    <div class="container">
        <div class="box1">
            <div class="row row-pb-md">
                <div class="col-md-12 friend details">
                    <div class="blog-entry">
                        <h1 class="font_color"><b>Chat History</b></h1>
                        <hr>
                        {{!-- <a href="mailto:{{friend.email}}"><h3 class="font_color">{{friend.email}} </h3></a>
                            <p> User height: {{friend.height}} </p>
                            <p> User Weight {{friend.weight}}</p> --}}
                    </div>
                
                {{#if message}}
                <div class="col-md-12 chat-history" style="margin-bottom: 20px">
                    <div class="blog-entry">
                        {{#each message}}
                        {{#ifCond User1Id '!=' ../user.id}}
                            <div class="row justify-content-start">
                                <div class="col-auto">
                                    <p class="speech-bubble-sender"><b>{{this.Message}}</b> <br> {{formatTime createdAt}} </p>
                                </div>
                            </div>
                        {{/ifCond}}
                        {{#ifCond User1Id '==' ../user.id}}
                            <div class="row justify-content-end">
                                <div class="col-auto">
                                    <p class="speech-bubble-receiver"><b>{{this.Message}}</b> <br> {{formatTime createdAt}} </p>
                                </div>
                            </div>
                        {{/ifCond}}
                        {{/each}}
                    </div>
                </div>
                <hr align="center" width="30%">
                {{/if}}
                
                <form method="post" style="width: 100%; margin-top: 30px;">
                    <div class="row">
                        <div class="col-10">
                            <input type="text" class="form-control" name="message" id="message" placeholder="Type a message">
                        </div>
                        <div class="col-2">
                            <button type="submit" class="btn btn-primary btn-tall" style="width: 100%;"><i class="fas fa-reply"></i></button>
                            <input type="hidden" name="receive" id="receive" value="{{friend.id}}"><br>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
</div>