{{> _msg }}
<div id="colorlib-container">
    <div class="container">
        <div class="box1">
            <div class="row row-pb-md">
                <div class="col-md-12 friend details">
                    <div class="blog-entry">
                        <h1 class="font_color"><b>Messages History</b></h1>
                        <hr>
                        {{!-- <a href="mailto:{{friend.email}}"><h3 class="font_color">{{friend.email}} </h3></a>
                            <p> User height: {{friend.height}} </p>
                            <p> User Weight {{friend.weight}}</p> --}}
                    </div>
                </div>
                
                <div class="col-md-12 chat-history">
                    <div class="blog-entry">
                        {{#each message}}
                        {{#ifCond User1Id '!=' ../user.id}}
                            <div class="row justify-content-start">
                                <div class="col-auto">
                                    <p class="speech-bubble-sender">{{this.Message}} <br> {{formatTime createdAt}} </p>
                                </div>
                            </div>
                        {{/ifCond}}
                        {{#ifCond User1Id '==' ../user.id}}
                            <div class="row justify-content-end">
                                <div class="col-auto">
                                    <p class="speech-bubble-receiver">{{this.Message}} <br> {{formatTime createdAt}} </p>
                                </div>
                            </div>
                        {{/ifCond}}
                        {{/each}}
                    </div>
                </div>

                <form method="post" style="width: 100%">
                    <div class="col-9">
                        <input type="text" class="form-control" name="message" id="message">
                    </div>
                    <div class="col-2">
                        <button type="submit" class="btn btn-primary btn-tall"><i class="fas fa-reply"></i></button>
                        <input type="hidden" name="receive" id="receive" value="{{friend.id}}"><br>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
</div>