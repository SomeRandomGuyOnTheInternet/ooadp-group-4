{{> _msg }}
<div id="colorlib-container">
    <div class="container">
        <div class="box1">
            <div class="row row-pb-md">
                <div class="col-md-12 friend details">
                    <div class="blog-entry">
                        <h1 class="font_color"><b>Chat History</b></h1>
                        <hr>
                        {{!-- <a href="mailto:{{friend.email}}"><h3 class="font_color">{{friend.email}} </h3></a>
                            <p> User height: {{friend.height}} </p>
                            <p> User Weight {{friend.weight}}</p> --}}
                    </div>

                    {{#if message}}
                    <div class="col-md-12 chat-history" style="margin-bottom: 20px">
                        <div class="blog-entry">
                            {{#each message}}
                            {{#ifCond User1Id '!=' ../user.id}}
                            <div class="row justify-content-start">
                                <div class="col-auto">
                                    <p class="speech-bubble-sender"><b>{{this.Message}}</b> <br>
                                        {{formatTime createdAt}}</p>

                                </div>
                            </div>
                            {{/ifCond}}
                            {{#ifCond User1Id '==' ../user.id}}
                            <div class="row justify-content-end">
                                <div class="col-auto">
                                    <p class="speech-bubble-receiver"><b>{{this.Message}}</b> <br>
                                        {{formatTime createdAt}} <br> <a href="/user/deleteMessage/{{this.id}}">
                                            <i class="fas fa-trash-alt"></i>&nbsp;&nbsp;Delete
                                        </a>
                                    </p>

                                </div>
                            </div>
                            {{/ifCond}}
                            {{/each}}
                        </div>
                    </div>
                    <hr align="center" width="30%">
                    {{/if}}

                    <form method="post" style="width: 100%; margin-top: 30px;">

                        <div class="row">
                            <div class="col-10">
                                <input type="text" class="form-control" name="message" id="message"
                                    placeholder="Type a message">
                            </div>
                            <div class="col-2">
                                <button type="submit" id="sendMessage" name="sendMessage"
                                    class="btn btn-primary btn-tall" style="width: 100%;"><i
                                        class="fas fa-reply"></i></button>
                                <input type="hidden" name="receive" id="receive" value="{{friend.id}}"><br>
                                <input type="hidden" name="refId" id="refId" value="{{chat.id}}"><br>
                                <div class="ajaxErrBlock" id="sendErrBlock">
                                    <i class="fas fa-exclamation-triangle"></i><span class="ajaxErrMsg"
                                        id="sendErrMsg"></span>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


<script>
    let oriMessage = {{{json message}}};
    let friendid = $('#receive').val();
    let referral = $('#refId').val();

    function checkNewMessages() {
        $.ajax({
            type: 'POST',
            url: `/user/checkMessages/` + referral,
            success: function (rawData) {
                if (rawData["history"].length != oriMessage.length)  location.reload();
            },
            complete: function (data) {
                setTimeout(checkNewMessages, 1000);
            }
        });
    }

    setTimeout(checkNewMessages, 1000);

    $('#sendMessage').click(function (event) {
        event.preventDefault();
        let chatMessage = $('#message').val();

        $.ajax({
            type: 'post',
            url: `/user/sendMessage/` + referral,
            data: { friendid, chatMessage },
            dataType: 'text'
        })
        .done(function (rawData) {
            let data = JSON.stringify(rawData);
            
            if (data.error) {
                $('#sendErrorBlock').css("display", "block");
                $('#sendErrorMsg').text(data.error);
            } else {
                location.reload();
            }
        });
    });

</script>