{{> _msg }}
<div id="colorlib-container">
    <div class="container">
        <div class="col-md-12">
        <div class="box1">
            <div class="row row-pb-md">
                <div class="col-md-12">

                    <header>
                        <h1 class="font_color"><b>User Settings</b></h1>
                        <h5>({{user.email}})</h5>
                        <hr>
                    </header>

                    <form method="post">

                        <div class="row form-group">
                            <div class="col-md-6">
                                <label>Name</label>
                                <input name="name" id="name" type="text" class="form-control" value="{{user.name}}" style="margin-bottom: 1em;">
                            </div>

                            <div class="col-md-3">
                                <label>Height (m)</label>
                                <input name="height" id="height" type="number" step="0.01" class="form-control" value="{{user.height}}">
                            </div>

                            <div class="col-md-3">
                                <label>Weight (kg)</label>
                                <input name="weight" id="weight" type="number" step="0.01" class="form-control" value="{{user.weight}}">
                            </div>
                        </div>
                        <br>
                        <input type="submit" name="action" value="Update Settings" class="btn btn-primary"
                            style="background-color: #4CAF50;">
                    </form>
                </div>
            </div>
        </div>
        </div>
    </div>
</div>