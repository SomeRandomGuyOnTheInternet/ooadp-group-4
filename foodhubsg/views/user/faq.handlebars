                                    <input id="description" name="description" type="text" class="form-control" value=""
                                     required>
                                </div>
                            </div>
                        </div>
                        <div class="modal-footer ajaxErrBlock" id="refCodeErrBlock">
                            <i class="fas fa-exclamation-triangle"></i><span class="ajaxErrMsg" id="refCodeErrMsg"></span>
                        </div>
                        <div class="modal-footer">
                            <input type="submit" value="Submit Question" id="refCodeSend" class="btn btn-primary"
                                style="width:100%">
                        </div>
                    </form>

                </div>
            </div>
        </div>


