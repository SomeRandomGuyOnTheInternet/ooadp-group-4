{{> _msg }}
<div id="colorlib-container">
    <div class="container">
        <div class="box1">
            <div class="row row-pb-md">
                <div class="col-md-12">
                    

                    <div class="col-md-12 recommended-shops">
                        <div class="blog-entry">

                                <h3 class="font_color">{{friend.name}} </h3> 
                                <a href="mailto:{{friend.email}}"><h3 class="font_color">{{friend.email}} </h3></a>
                                <p> User height: {{friend.height}} </p>
                                <p> User Weight {{friend.weight}}</p>
                            </div>
                        </div>
                    

                    {{#if compliment}}
                    <h3> Your compliment </h3>
                    <textarea class="form-control" readonly> 
                        {{compliment.compliment}} </textarea>
                    <div></div>
                    <a href="/user/editCompliment/{{compliment.id}}">
                          <button type="submit" name="action" value="edit" id="edit" class="btn btn-primary btn-tall"> 
                            Edit Your Compliment</button></a>
                    <a href="/user/deleteCompliment/{{compliment.id}}">
                    <button type="submit" name="action" value="submitComment" id="submitComment" class="btn btn-danger btn-tall">
                        Delete</button> </a>

                    </div>
                    
                    {{else}}                   
                      <form method="post" action="" id="compliment-form">
                        <label for="comment">Enter Your Compliment Below</label>
                        <textarea id="compliment" name="compliment" form="compliment-form" class="form-control" rows="4" cols="50"
                            required></textarea>
                          <button type="submit" name="action" value="submitComment" id="submitComment" class="btn btn-primary"
                                style="background-color: #4CAF50;" disabled>Submit</button>
                    </form>
                    </div>
                    {{/if}}
                </div>
            </div>
        </div>
    </div>
</div>

<script> 

    $('#compliment')
    .on("change", function(event) {
        if ($('#compliment').length == 0) {
            $("#submitComment").attr("disabled", true);
        } else {
            $("#submitComment").attr("disabled", false);
        }
    });
</script>