<div id="colorlib-container">
    <div class="container">
        <div class="box1">
            <div class="col-md-12" style="padding: 0.5em 0.5em 0 0.5em !important;">
                <div class="row row-pb-md">

                    <div class="col-md-12">
                        <h1 class="font_color"><b>Add Food Item</b></h1>
                        <hr>
                    </div>

                    <div class="col-md-6">
                        <div class="blog-entry">
                            <img src="/img/no-image.jpg" class="img-responsive" alt="Image">
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="desc">
                            <p class="meta">
                                <label>Name of Food</label>
                                <input name="name" id="name" type="text" class="form-control" value=""
                                    placeholder="Name">
                                <label>Shop Location</label>
                                <select name="vendor" id="vendor" type="text" class="form-control">
                                    <option value="Chinatown">Chinatown</option>
                                    <option value="Tampines">Tampines</option>
                                    <option value="Ang Mo Kio">Ang Mo Kio</option>
                                    <option value="Sengkang">Sengkang</option>
                                    <option value="...">More to come!</option>
                                </select>
                                <hr>
                            </p>
                        </div>
                    </div>

                    <div class="col-md-12">
                        <label for="description">Description</label>
                        <textarea id="description" name="description" form="description-form" class="form-control"
                            rows="4" cols="50"></textarea><br>
                    </div>

                    <div class="col-md-12">
                        <label>Vendor</label>
                        <select name="address" id="address" type="text" class="form-control">
                            <option value="admin@koufu.com">Koufu Group</option>
                            <option value="	admin@abrhldings.com">ABR Holdings</option>
                        </select>
                    </div>

                    <div class="col-md-12">
                        <input type="submit" name="action" value="Add Shop" class="btn btn-primary"
                            style="background-color: #4CAF50;">
                    </div>
                </div>
                <br>
            </div>
        </div>
    </div>

</div>