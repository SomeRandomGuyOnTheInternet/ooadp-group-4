<div id="colorlib-container">
    <div class="container">
        <div class="box1">
            <div class="col-md-12" style="padding: 0.5em 0.5em 0 0.5em !important;">
                <div class="row row-pb-md">
                    <form action="" method="post" id="food-form">
                        <div class="col-md-12">
                            <h1 class="font_color"><b>Add Food Item</b></h1>
                            <hr>
                        </div>

                        <div class="col-md-6">
                            <div class="blog-entry">
                                <img src="/images/nice-waffle.jpg" class="img-responsive" alt="Image">
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="desc">
                                <p class="meta">
                                    <label>Name of Food</label>
                                    <input name="name" id="name" type="text" class="form-control" value=""
                                        placeholder="Name">
                                    <label>Shop Location</label>
                                    <select name="shop" id="shop" type="shop" class="form-control">
                                        {{#each shop}}
                                        <option value={{this.name}}> {{this.name}} </option>
                                        {{/each}}
                                    </select>
                                    <label>Calories</label>
                                    <input name="calories" id="calories" type="text" class="form-control" value=""
                                        placeholder="Calories">

                                    <hr>
                                </p>
                            </div>
                        </div>
                        <div class="col-md-12">
                            <label for="description">Description</label>
                            <textarea id="description" name="description" form="food-form" class="form-control" rows="4"
                                cols="50"></textarea><br>
                        </div>
                        <div class="col-md-12">
                            <button type="submit" name="action" value="Add Shop" class="btn btn-primary"
                                style="background-color: #4CAF50;">Add Shop</button>
                    </form>
                </div>
            </div>
            <br>
        </div>
    </div>
</div>