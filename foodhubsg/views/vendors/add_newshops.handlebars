<div id="colorlib-container">
    <div class="container">
        <div class="box1">
            <div class="col-md-12" style="padding: 0.5em 0.5em 0 0.5em !important;">
                <div class="row row-pb-md">
                    <form method="post" action="" id="shop-form">
                        <div class="col-md-12">
                            <h1 class="font_color"><b>Add Shop</b></h1>
                            <hr>
                        </div>

                        <div class="col-md-6">
                            <div class="blog-entry"></div>
                            <input type="file" id="shopImage" name="shopImage" accept="image/png,
 					image/jpeg,image/jpg,image/gif">


                            <img src="/images/rand.jpeg" id="shopImg" class="img-responsive" alt="Image">
                        </div>

                        <input id="posterURL" type="hidden" name="posterURL">
                </div>

                <div class="col-md-6">
                    <div class="desc">
                        <p class="meta">
                            <label>Shop Name</label>
                            <input name="name" id="name" type="text" class="form-control" value="" placeholder="Name">
                            <label>Shop Address</label>
                            <input name="address" id="address" type="text" class="form-control" value=""
                                placeholder="Address">
                            <label>Shop Location</label>
                            <select name="location" id="location" type="text" class="form-control">
                                <option value="Chinatown">Chinatown</option>
                                <option value="Tampines">Tampines</option>
                                <option value="Ang Mo Kio">Ang Mo Kio</option>
                                <option value="Sengkang">Sengkang</option>
                                <option value="...">More to come!</option>
                            </select>
                            <hr>
                        </p>
                    </div>
                </div>

                <div class="col-md-12">
                    <label for="description">Description</label>
                    <textarea id="description" name="description" form="shop-form" class="form-control" rows="4"
                        cols="50"></textarea><br>
                </div>

                <div class="col-md-12">
                    <label>Vendor</label>
                    <input name="vendor" id="vendor" type="text" class="form-control" value="{{user.name}}"
                        placeholder="vendor" readonly>
                </div>

                <div class="col-md-12">
                    <button type="submit" name="action" value="Add Shop" class="btn btn-primary"
                        style="background-color: #4CAF50;">Add Shop</button>

                    </form>
                </div>
            </div>
            <br>
        </div>
    </div>
</div>
