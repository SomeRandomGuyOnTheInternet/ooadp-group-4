<div id="colorlib-container">
    <div class="container">
        <div class="box1">
            <div class="col-md-12" style="padding: 0.5em 0.5em 0 0.5em !important;">
                <div class="row row-pb-md">
                    <form method="post" action="" id="shop-form">
                        <div class="col-md-12">
                            <h1 class="font_color"><b>Edit Shop</b></h1>
                            <span>Owned by <i>Vendor - <u><a href="#">vendor@mail.com</a></u></i></span>
                            <hr>
                        </div>

                        <div class="col-md-12">
                            <div class="blog-entry">
                                <input type="file" id="shopImage" name="shopImage" accept="image/png,
 					image/jpeg,image/jpg,image/gif">


                                <img src="{{shop.imageLocation}}" class="img-responsive" alt="{{ shop.name }} Image">
                            </div>
                        </div>

                        <div class="col-md-12">
                            <div class="desc">
                                <p class="meta">
                                    <label>Shop Name</label>
                                    <input name="name" id="name" type="text" class="form-control"
                                        value="{{ shop.name }}" placeholder="Name">
                                    <label>Shop Address</label>
                                    <input name="address" id="address" type="text" class="form-control"
                                        value="{{ shop.address }}" placeholder="Address">
                                    {{!-- <label>Shop Location</label> --}}
                                    {{!-- <select name="address" id="address" type="text" class="form-control">
                                        <option value="Chinatown">Chinatown</option>
                                        <option value="Tampines">Tampines</option>
                                        <option value="Ang Mo Kio">Ang Mo Kio</option>
                                        <option value="Sengkang">Sengkang</option>
                                        <option value="...">More to come!</option>
                                    </select> --}}
                                    <hr>
                                </p>
                            </div>
                        </div>

                        <div class="col-md-12">
                            <label for="description">Description</label>
                            <textarea id="description" name="description" form="description-form" class="form-control"
                                rows="4" cols="50">{{ shop.description }}</textarea><br>
                        </div>

                        <div class="col-md-12">
                            <button type="submit" name="action" value="Update Shop Details" class="btn btn-primary"
                                style="background-color: #4CAF50;">Update</button>

                        </div>

                    </form>
                    <button type="submit" name="action" value="Delete Shop" class="btn btn-primary" id="remove-shop"
                        style="background-color: #d9534f;">
                        <a href="/vendor/deleteShop/{{shop.id}}" style="color: #ffff;">Delete </a>
                    </button>
                </div>
                <br>
            </div>
        </div>
    </div>

    <div class="container">
        <div class="box1">
            <div class="col-md-12" style="padding: 0.5em 0.5em 0 0.5em !important;"></div>
            <div class="row row-pb-md">
                t <div class="col-md-12">
                    <h1 class="font_color"><b>Edit Menu</b></h1>
                    <hr>
                </div>

                {{#each foodItems}}
                <article class="food-journal">
                    <header>
                        <div id="vendor-food">
                            <h4 class="font_color" style="margin-bottom: 0; display: inline">
                                <b>{{ this.name }}</b></h4><br>
                            <i class="fas fa-edit" style="float:right;"></i>
                            <p style="display: inline">(code: {{ this.id }})</p><br>
                            <p class="recommended-{{ this.isRecommended }}">{{ this.calories }} calories <br></p>
                        </div>
                    </header>
                </article>
                {{/each}}

                <article class="food-journal">
                    <header>
                        <div id="vendor-food">
                            <a href="/vendor/{{shop.id}}/addMenu"><i href="/vendor/{{shop.id}}/addMenu"
                                    class="fas fa-plus-square" style="font-size: 3em;"></i></a>
                            <br>
                            <p style="display: inline">Add New Food Item</p><br>
                        </div>
                    </header>
                </article>

            </div>
        </div>
    </div>
</div>
</div>