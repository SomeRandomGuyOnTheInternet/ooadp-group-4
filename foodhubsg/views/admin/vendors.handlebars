{{> _msg }}
<div id="colorlib-container">
    <div class="container">

        <div class="box1">
            <div class="row row-pb-md">
                <div class="col-md-12">
                    <header id="summary-header">
                        <h1 class="font_color" style="display:inline-block;"><b>All Available Vendors</b></h1>
                        {{!-- <a href="/user/foodJournal"><button type="button" class="btn btn-success" style="float:right;">Add New Vendor</button></a> --}}
                        <hr>
                        <table class="table table-hover">
                            <thead class="thead-green">
                                <tr>
                                    <th scope="col">Name</th>
                                    <th scope="col">Vendor Email</th>
                                    <th scope="col">Vendor's Shops</th>
                                </tr>
                            </thead>
                            <tbody>
                            {{#each groupedVendors}}
                            <tr>
                                <th scope="row">{{0.name}}</th>
                                <td>{{0.email}}</td>
                                <td>
                                    |
                                    {{#each this}}
                                    <u><a href="/admin/editShop/{{'Shops.id'}}/">{{'Shops.name'}}</a></u> |
                                    {{else}}
                                    <h6>No shops added!</h6>
                                    {{/each}}
                                </td>
                            </tr>
                            {{else}}
    
                            {{/each}}
                            </tbody>
                        </table>
                    </header>
                </div>
            </div>
        </div>

        <div class="box1">
            <div class="row row-pb-md">
                <div class="col-md-12">
        
                    <header>
                        <h1 class="font_color"><b>Add Vendor</b></h1>
                        <hr>
                    </header>
        
                    <form method="post">
        
                        <div class="row form-group">
                            <div class="col-md-12" style="margin-bottom:1em;">
                                <label>Name</label>
                                <input name="name" id="name" type="text" class="form-control" value="" placeholder="Name" required>
                            </div>
        
                            <div class="col-md-12" style="margin-bottom:1em;">
                                <label>Email</label>
                                <input name="email" id="email" type="email" class="form-control" value="" placeholder="Email" required>
                            </div>
        
                            <div class="col-md-6 password">
                                <label>Password</label>
                                <input name="password" id="password" type="password" class="form-control delprefix"
                                    placeholder="Password" required>
                            </div>
        
                            <div class="col-md-6 confirm-password">
                                <label>Confirm Password</label>
                                <input name="confirmPassword" id="confirmPassword" type="password"
                                    class="form-control delprefix" placeholder="Confirm Password" required>
                            </div>
                        </div>
                        <br>    
                        <input type="submit" name="action" value="Add New Vendor" class="btn btn-primary"
                            style="background-color: #4CAF50;">
                    </form>
                </div>
            </div>
        </div>

    </div>
</div>