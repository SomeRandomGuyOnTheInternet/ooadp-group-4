{{> _msg }}
<div id="colorlib-container">
    <div class="container">
        <div class="box1">
            <div class="col-md-12">
                <div class="row row-pb-md">
                    <div class="col-md-12">
                        <h1 class="font_color" style="display:inline-block;"><b>All Available Shops</b></h1>
                        <a href="/admin/addShop"><button type="button" class="btn btn-success" style="float:right;">Add New Shop</button></a>
                        <hr>
                    </div>
                    
                    {{#each shops}}
                    <div class="col-md-6 recommended-shops">
                        <div class="blog-entry">
                            <div class="blog-img">
                                <a class="action" href="/admin/editShop/{{this.id}}"><img src="{{this.imageLocation}}" class="img-responsive" alt="Image of shop"></a>
                            </div>
                            <div class="desc">
                                <p class="meta">
                                    <b class="vendors"><b>{{this.name}}</b></b><br>
                                    <span class="food_location"><b>{{ this.address }}</b></span><br>
                                    <span class="food_rating">Rating:&nbsp;
										{{#if this.rating}} 
										<b class="recommended-{{ this.isRecommended }}">
											{{#times this.rating}}
												<i class="fas fa-star"></i>
											{{/times}}
											{{#times (math 5 "-" this.rating)}}
												<i class="far fa-star"></i>
											{{/times}}
										</b>
										{{else}} 
											No rating available 
										{{/if}}
                                    </span>
                                </p>
                            </div>
                        </div>
                    </div>
                    {{/each}}

                </div>
            </div>
        </div>

        {{#if deletedShops}}
        <div class="box1">
            <div class="col-md-12">
                <div class="row row-pb-md">
                    <div class="col-md-12">
                        <h1 class="font_color" style="display:inline-block;"><b>All Deleted Shops</b></h1>\
                        <hr>
                    </div>
                    
                    {{#each deletedShops}}
                    <div class="col-md-6 recommended-shops">
                        <div class="blog-entry">
                            <div class="blog-img">
                                <img src="{{this.imageLocation}}" class="img-responsive" alt="Image of shop" style="opacity:0.5;">
                            </div>
                            <div class="desc">
                                <p class="meta">
                                    <b class="vendors"><b>{{this.name}}</b></b><br>
                                    <span class="food_location"><b>{{ this.address }}</b></span><br>
                                    <span class="food_rating">Rating:&nbsp;
                                        {{#if this.rating}} 
                                        <b class="recommended-{{ this.isRecommended }}">
                                            {{#times this.rating}}
                                                <i class="fas fa-star"></i>
                                            {{/times}}
                                            {{#times (math 5 "-" this.rating)}}
                                                <i class="far fa-star"></i>
                                            {{/times}}
                                        </b>
                                        {{else}} 
                                            No rating available 
                                        {{/if}}
                                    </span>
                                    <form method="POST" action="/admin/undeleteShop/{{this.id}}">
                                        <button type="submit" name="action" value="Undelete Shop" class="btn-undelete hyperlink" data-toggle="confirmation" data-title="Confirm undelete?">
                                            <i class="fas fa-ban"></i>&nbsp;Undelete Shop
                                        </button>
                                    </form>
                                </p>
                            </div>
                        </div>
                    </div>
                    {{/each}}

                </div>
            </div>
        </div>
        {{/if}}

    </div>
</div>